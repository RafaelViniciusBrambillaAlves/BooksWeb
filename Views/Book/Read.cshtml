@model List<BooksWeb.Models.Book>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=Book, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-right">
        <div class="container-fluid">
            <h2 class="mb-0">Book</h2>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/reader/read">Readers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/book/read">Books</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Books</li>
        </ol>
    </nav>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Gender</th>
                <th>Synopsis</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        @foreach(var book in Model) {
        <tr>
            <td>@book.BookId</td>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Gender</td>
            <td>@book.Synopsis</td>
            <td>
                <div class="btn-group" role="group">

                    <a href="/book/update/@book.BookId" class="btn btn-sm btn-outline-success">
                        <i class="bi-pencil-square"></i> Edit
                    </a>

                    <a href="/book/delete/@book.BookId" class="btn btn-sm btn-outline-danger">
                        <i class="bi-trash"></i> Delete
                    </a>
                    
                </div>
            </td>
        </tr>
        }
    </table>

    <a class="btn btn-primary" href="/book/create">Adicionar</a>

</body>
</html>